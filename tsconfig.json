{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts", "old/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": false,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": false
  }
}
